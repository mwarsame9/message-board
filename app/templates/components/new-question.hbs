{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="inquiry">Question:</label>
      {{input value=inquiry id="inquiry"}}
    </div>

    <div class="form-group">
      <label for="author">Name:</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes:</label>
      {{input value=notes id="notes"}}
    </div>

    <button {{action 'saveQuestion1'}}>Save</button>
  </form>
</div>
{{else}}
  <button class="btn btn-success"{{action 'questionFormShow'}}>New Question</button>
{{/if}}
